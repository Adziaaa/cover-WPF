                    <TextBlock Margin="226,226,234,193" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FFFFF8F8">Yes</TextBlock>
               
                </Grid>
            </TabItem>
            <ListView d:ItemsSource="{d:SampleData ItemCount=5}">
